<Window x:Class="WpfApp1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid ShowGridLines="True" Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Margin="5" Content="1번 버튼"/>

        <Button Grid.Row="0" Grid.Column="1" Margin="5,5,15,5" Content="1번"/>

        <Button Grid.Row="0" Grid.Column="2" Margin="5" Content="3번 컨텐츠가 긴 버튼"/>

        <Button Grid.Row="1" Grid.Column="0" Margin="5" Content="4번 컨텐츠가 긴 버튼"/>

        <Button Grid.Row="1" Grid.Column="1" Margin="5,5,15,5" Content="5번 버튼"/>

        <Button Grid.Row="1" Grid.Column="2" Margin="5" Content="6반"/>

        <GridSplitter Grid.RowSpan="2" Grid.Column="1" Background="Blue" Width="10"/>
    </Grid>
</Window>
